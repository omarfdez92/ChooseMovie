<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ef2f2f"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="194dp"
            android:layout_height="133dp" app:srcCompat="@drawable/movie"
            android:layout_alignParentTop="true" android:id="@+id/imageView"
            android:layout_marginTop="29dp" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="95dp" android:layout_marginEnd="95dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="95dp" android:layout_marginStart="95dp" android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Avengers" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_centerHorizontal="true"
            android:id="@+id/movieSelectedTxt" app:fontFamily="@font/muli_bold"
            android:textSize="24sp" android:layout_marginTop="24dp" android:layout_below="@+id/imageView"
            android:textColor="#fff"/>
    <Button
            android:text="choose!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/chooseBtn" android:layout_marginBottom="0dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_bold" android:textSize="18sp" android:textColor="#fff"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addMovieTxt" android:textSize="18sp"
            android:fontFamily="@font/muli_bold" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:hint="Add another movie. . ."/>
    <Button
            android:text="add movie"
            android:layout_width="232dp"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/addMovieBtn" android:layout_marginBottom="127dp"
            android:textColor="#fff" android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:layout_above="@+id/chooseBtn"/>

</RelativeLayout>